{
  "name": "freerasp-react-native",
  "version": "3.14.1",
  "description": "React Native plugin for improving app security and threat monitoring on Android and iOS mobile devices.",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "expo:typecheck": "cd plugin && tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prettier": "prettier \"**/*.{ts,js}\"",
    "prepack": "bob build && yarn build:plugin",
    "build": "bob build",
    "example": "yarn --cwd example",
    "bootstrap": "yarn example && yarn install && yarn example pods",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build",
    "build:plugin": "tsc --build plugin"
  },
  "keywords": [
    "react-native",
    "react-native-library",
    "react-native-plugin",
    "freerasp",
    "react-native-security",
    "react-native-app-security",
    "react-native-tampering-detection",
    "react-native-root-detection",
    "react-native-app-shielding",
    "react-native-rasp",
    "react-native-tampering",
    "react-native-reverse-engineering",
    "react-native-application-security",
    "react-native-frida"
  ],
  "repository": "https://github.com/talsec/Free-RASP-ReactNative",
  "author": "Talsec <info@talsec.app> (https://github.com/talsec)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/talsec/Free-RASP-ReactNative/issues"
  },
  "homepage": "https://github.com/talsec/Free-RASP-ReactNative#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@react-native-community/eslint-config": "^3.0.2",
    "@release-it/conventional-changelog": "^5.0.0",
    "@tsconfig/node-lts": "^20.1.1",
    "@types/react": "17.0.21",
    "@types/react-native": "0.70.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "expo": "^50.0.8",
    "expo-module-scripts": "^3.4.1",
    "pod-install": "^0.1.0",
    "prettier": "^2.0.5",
    "react": "18.2.0",
    "react-native": "0.72.12",
    "react-native-builder-bob": "^0.20.0",
    "typescript": "^5.4.4"
  },
  "resolutions": {
    "@types/react": "17.0.21",
    "semver": "^7.5.3"
  },
  "peerDependencies": {
    "expo": ">=47.0.0",
    "react": "*",
    "react-native": "*"
  },
  "peerDependenciesMeta": {
    "expo": {
      "optional": true
    }
  },
  "engines": {
    "node": ">= 16.0.0"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "release-it": {
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "react"
      }
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
